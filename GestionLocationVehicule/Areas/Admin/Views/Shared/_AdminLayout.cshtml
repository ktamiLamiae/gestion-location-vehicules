<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>

    <nav class="sidebar">
        <div class="sidebar-header">
            <i class="bi bi-car-front-fill me-2 text-primary"></i> RapidRide
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i> Tableau de bord</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index"><i class="bi bi-person-fill me-2"></i> Utilisateurs</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-controller="Vehicles" asp-action="Index"><i class="bi bi-truck me-2"></i> Véhicules</a>
            </li>
        </ul>
    </nav>

    <nav class="navbar navbar-top">
        <div class="container-fluid">
            <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Rechercher une location..." aria-label="Search">
            </form>
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-secondary me-3"><i class="bi bi-bell"></i></button>
                <span class="me-3 d-none d-md-inline">Admin (John Doe)</span>
                <img src="https://via.placeholder.com/40/007BFF/FFFFFF?text=JD" alt="User Avatar" class="rounded-circle">
            </div>
        </div>
    </nav>

    <main class="main-content">
        @RenderBody()
    </main>

    <link href="~/lib/jquery/dist/jquery.min.js" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>