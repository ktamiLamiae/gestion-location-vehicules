<div class="page-header-container">
    <div class="container-fluid mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="mb-0">@ViewData["Title"]</h1>
            <a class="btn btn-secondary" asp-controller="Vehicules" asp-area="Admin" asp-action="Index">
                <i class="bi bi-arrow-left-circle me-2"></i> Retour à la Liste
            </a>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="card-title">Ajouter un nouveau véhicule</h3>
        </div>

        <div class="card-body">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            }

            @if (ViewBag.success != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ViewBag.success
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            }

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">
                            Titre <span class="text-danger">*</span>
                        </label>
                        <input name="Titre" class="form-control"
                               placeholder="Ex : Porsche 911 Carrera 2022" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Description</label>
                        <textarea name="Description" class="form-control" rows="1" placeholder="Description du véhicule, options, état, etc..."></textarea>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Matricule <span class="text-danger">*</span></label>
                        <input name="Matricule" class="form-control" placeholder="Ex : 12345-A-6" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Marque <span class="text-danger">*</span></label>
                        <input name="Marque" class="form-control" placeholder="Ex : Porsche" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label"> Modèle <span class="text-danger">*</span></label>
                        <input name="Modele" class="form-control" placeholder="Ex : 911 Carrera" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label"> Année <span class="text-danger">*</span></label>
                        <input type="number" name="Annee" class="form-control" placeholder="Ex : 2022" min="1980" max="@DateTime.Now.Year" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Kilométrage</label>
                        <input type="number" name="Kilometrage" class="form-control" placeholder="Ex : 25000" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">
                            Prix <span class="text-danger">*</span>
                        </label>
                        <input type="number" step="0.01" name="Prix" class="form-control" placeholder="Ex : 1500.00" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">
                            Statut <span class="text-danger">*</span>
                        </label>
                        <select name="Status" class="form-select">
                            <option value="0">Disponible</option>
                            <option value="1">Loué</option>
                            <option value="2">Maintenance</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="form-label">
                            Catégorie <span class="text-danger">*</span>
                        </label>
                        <select name="VehicleCategoryId" class="form-select">
                            <option value="">-- Sélectionnez une Catégorie --</option>
                            @if (ViewBag.VehicleCategories != null)
                            {
                                foreach (var category in ViewBag.VehicleCategories)
                                {
                                    <option value="@category.Id">@category.libelle</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Image du Véhicule</label>
                        <input type="file" id="ImageFile" name="ImageFile" class="form-control" />
                    </div>
                </div>


                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i> Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>